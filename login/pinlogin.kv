<PinLoginScreen>:
    pinholder: pinholder
    forgot_pin: forgot_pin
    register_pin: register_pin
    
    FloatLayout:
        size_hint: 1,1
        pos_hint: {'center_x': 0.5,'center_y': 0.5}

        CircleWidget2: 
            size_hint: None, None
            size: root.circle_size, root.circle_size  # ✅ Use root property
            pos_hint: {"center_x": 0.9, "center_y": 1}

        CircleWidget1: 
            size_hint: None, None
            size: root.circle_size, root.circle_size  # ✅ Use root property
            pos_hint: {"center_x": 0.1, "center_y": 0.9}
            
        CircleWidget1: 
            size_hint: None, None
            size: root.circle_size, root.circle_size  # ✅ Use root property
            pos_hint: {"center_x": 0.15, "center_y": 0.15}

        BoxLayout:
            orientation:'vertical'
            size_hint: 1,1
            pos_hint: {'center_x': 0.5,'center_y': 0.5}

            BoxLayout:
                size_hint: 1,0.4
 
                Image:
                    size_hint: .8,.8
                    source: app.icon
                    allow_stretch: True
                    keep_ratio: True
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

            PinHolder:
                id: pinholder
                size_hint: 1, 0.1 
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Label:
                size_hint: 1,0.05
                text: 'Keep Your PIN Secure – Never Share It'
                font_name:  "roboto_light"
                font_size: sp(root.never_forget_pin_font_size)
                color: chex('#014367') 
                    


            PinKeyboard: 
                size_hint: 1,0.4
 

            BoxLayout:
                size_hint: 1,0.05
                orientation: 'horizontal'

                ClickableLabel: 
                    id: forgot_pin
                    text: "[u]Forgot your pin?[/u]"
                
                ClickableLabel:
                    id: register_pin
                    text: "[u]Register your technical app[/u]" 



<PinHolder>:
    orientation: 'horizontal'
    spacing: dp(10)

    pin1 : pin1
    pin2 : pin2
    pin3 : pin3
    pin4 : pin4

    Widget:
        size_hint: 0.2,1
    
    PinWidget:
        id: pin1
        size_hint: 0.15,1
    PinWidget:
        id: pin2
        size_hint: 0.15,1
    PinWidget:
        id: pin3
        size_hint: 0.15,1
    PinWidget:
        id: pin4
        size_hint: 0.15,1

    Widget:
        size_hint: 0.2,1

