<NavigationBar>:
    dashboard_button : dashboard_button
    ticket_button : ticket_button
    settings_button : settings_button

    orientation: 'horizontal'
        
    canvas.before:
        Color: 
            rgba: chex('#014367')
        RoundedRectangle:
            pos : self.pos
            size : self.size
            radius: [4 , 4, 0 , 0]

    MDIconButton:
        id: dashboard_button
        icon: 'home-analytics' 
        size_hint: .33,1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        theme_font_size: "Custom"
        # font_size: "45sp" 

    MDIconButton:
        id: ticket_button
        icon: 'ticket-account' 
        size_hint: .33,1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        theme_font_size: "Custom"
        # font_size: "30sp" 
        
    MDIconButton:
        id: settings_button
        icon: "account-cog"
        size_hint: .33,1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        theme_font_size: "Custom"
