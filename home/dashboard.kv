



<Dashboard>:
    opacity:0
    size_hint: 1,1
    pos_hint: {'center_x': 0.5,'center_y': 0.5}
    # map_container : map_container
    team_member_container : team_member_container

    ScrollView: 
        # scroll_type: ['bars'] 
        size_hint: 1, 1 
        do_scroll_x: False
        do_scroll_y: True
        # bar_width: 0  # optional: hide scroll bar


            
        MDGridLayout:
            id: ticket_list
            cols: 1
            adaptive_height: True
            padding: [dp(15), 0, dp(15), dp(100)]
            spacing: dp(0)
            size_hint_y: None  

            Widget:
                size_hint: 1, None
                height: sp(30)

            Label:
                text: root.team_name
                font_name: 'roboto_extrabold'
                font_size: root.team_name_font_size
                color: chex("01334F")
                size_hint: (1 , None)
                height: dp(35)
                

            # BoxLayout:
            #     orientation: 'horizontal'
            #     size_hint: 1, None
            #     height: sp(190)
            #     id: map_container

            #     canvas.before:
            #         Color:
            #             rgba: chex("#ACE2E1")
            #         RoundedRectangle:
            #             pos: self.pos
            #             size: self.size
            #             radius: [4]
            
            Widget:
                size_hint: 1, None
                height: sp(30)

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: sp(150) 
                spacing: dp(10)

                LabelBox: 
                    orientation: 'vertical'
                    size_hint: 1, 1 

                    Label:
                        text: 'Total Ticket Assigned'
                        size_hint: (1, 0.15)
                        font_size: root.title_anl_font_size
                        font_name: 'roboto_extrabold'
                        color: chex("01334F")
                        halign: 'left'
                        
                    
                    Label:
                        text: root.total_ticket_assigned
                        size_hint: (1, 0.85)
                        font_size: root.body_anl_font_size
                        font_name: 'roboto_light'
                        color: chex("01334F")


                    
                
                LabelBox:
                    orientation: 'vertical'
                    size_hint: 1, 1
                
                    
                    Label:
                        text: 'Open Ticket Counts'
                        size_hint: (1, 0.15)
                        font_size: root.title_anl_font_size
                        font_name: 'roboto_extrabold'
                        color: chex("01334F")
                        halign: 'left'
                    
                    Label:
                        text: root.open_ticket_count
                        size_hint: (1, 0.85)
                        font_size: root.body_anl_font_size
                        font_name: 'roboto_light'
                        color: chex("01334F")


            Widget:
                size_hint: (1 , None)
                height: dp(10)
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: sp(150) 
                spacing: dp(10)

                LabelBox: 
                    orientation: 'vertical'
                    size_hint: 1, 1 

                    Label:
                        text: 'Ticket Close Today'
                        size_hint: (1, 0.15)
                        font_size: root.title_anl_font_size
                        font_name: 'roboto_extrabold'
                        color: chex("01334F")
                        halign: 'left'
                        
                    
                    Label:
                        text: root.ticket_close_today
                        size_hint: (1, 0.85)
                        font_size: root.body_anl_font_size
                        font_name: 'roboto_light'
                        color: chex("01334F")


                    
                
                LabelBox:
                    orientation: 'vertical'
                    size_hint: 1, 1
                
                    
                    Label:
                        text: 'Team Member Counts'
                        size_hint: (1, 0.15)
                        font_size: root.title_anl_font_size
                        font_name: 'roboto_extrabold'
                        color: chex("01334F")
                         
                    
                    Label:
                        text: root.team_member_count
                        size_hint: (1, 0.85)
                        font_size: root.body_anl_font_size
                        font_name: 'roboto_light'
                        color: chex("01334F")



            Widget:
                size_hint: 1, None
                height: dp(30)

            
            Label:
                padding: [dp(10), 0 , 0 , 0]
                text: "List of Team Members"
                size_hint: 0.5, None
                height: dp(35)
                font_size: root.title_anl_font_size
                color: chex("#01334F")
                text_size: self.size
                valign: 'middle'
                halign: 'left'
                markup: True
                font_name: 'roboto_extrabold'

            MDBoxLayout:
                id: team_member_container
                orientation: 'vertical'
                size_hint: 1, None
                adaptive_height: True
                spacing: dp(10)
                padding: dp(10)

                canvas.before:
                    Color:
                        rgba: chex("ACE2E1")
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [4]
        

<LabelBox@BoxLayout>:
    
    canvas.before:
        Color:
            rgba: chex("ACE2E1")
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [4]


<MemberDataWidget>:
    orientation: 'horizontal'
    height: dp(20)
    size_hint: 1, None
    spacing: dp(10)
    opacity : 0

    Label:
        text: root.member_name
        size_hint: 0.5, 1 
        font_size: sp(10)
        color: chex("#01334F")
        text_size: self.size
        valign: 'middle'
        halign: 'left'
        markup: True
        font_name: 'roboto_light'

    Label:
        text: root.member_ticket
        size_hint: 0.5, 1 
        font_size: sp(10)
        color: chex("#01334F")
        text_size: self.size
        valign: 'middle'
        halign: 'right'
        markup: True
        font_name: 'roboto_semibold'



